.single-main

  %table.table
    %thead
      %tr
        %th 名称
        %th 样式标识
        %th 类型
        %th 操作

    %tbody
      - @tags.each do |tag|
        %tr
          %td
            = tag.name
          %td
            = tag.css_name
          %td
            = tag.usage_name
          %td
            = link_to '编辑', edit_admin_tag_path(tag)
            ｜
            = link_to '删除', admin_tag_path(tag), :confirm => '你确定吗', :method => :delete

  = paginate @tags, :outer_window => 1

  = link_to '添加新标签 +', new_admin_tag_path
